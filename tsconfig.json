{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": false,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": false,
        "strict": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "preserve",
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "jest",
            "puppeteer",
            "node"
        ],
        "rootDir": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "/router/*": [
                "src/router/*"
            ],
            "/http/*": [
                "src/shared/http/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "types/**/*.d.ts",
        "types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}